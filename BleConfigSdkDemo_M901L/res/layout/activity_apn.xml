<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_bg"
    android:orientation="vertical" >

    <include layout="@layout/header" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginTop="10dp"
        android:text="@string/tips_set_apn"
        android:textColor="@color/black"
        android:textSize="@dimen/Title_3"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginTop="20dp"
        android:text="@string/select_device"
        android:textColor="@color/black_60"
        android:textSize="@dimen/Title_4" />

    <RelativeLayout
        android:id="@+id/layout_deviceid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_deviceid"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/device_id"
            android:textColor="@color/black_50"
            android:textSize="@dimen/Title_4" />

        <TextView
            android:id="@+id/tv_deviceid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/sdk_icon_rightarrow"
            android:gravity="right"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:textColor="@color/black_50"
            android:textSize="@dimen/Title_4" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginTop="10dp"
        android:text="@string/tips_apn"
        android:textColor="@color/black_60"
        android:textSize="@dimen/Title_4" />

    <EditText
        android:id="@+id/et_apn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:layout_marginTop="10dp"
        android:background="@drawable/et_bg"
        android:hint="@string/apn"
        android:paddingBottom="12dp"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black_50"
        android:textSize="@dimen/Title_4" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:layout_marginTop="20dp"
        android:background="@drawable/long_btn_bg"
        android:paddingBottom="13dp"
        android:paddingTop="13dp"
        android:text="@string/get"
        android:textColor="@color/white"
        android:textSize="@dimen/Title_1" />
    
    <Button
        android:id="@+id/btn_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:layout_marginTop="20dp"
        android:background="@drawable/long_btn_bg"
        android:paddingBottom="13dp"
        android:paddingTop="13dp"
        android:text="@string/set"
        android:textColor="@color/white"
        android:textSize="@dimen/Title_1" />

</LinearLayout>